<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Sample Servlet Example</display-name>
  
  <servlet>
  	<servlet-name>LearnWordServlet</servlet-name>
  	<display-name>LearnWordServlet</display-name>
  	<description>Store data in request, session and servlet context</description>
  	<servlet-class>com.toeic.servlet.ShowWordServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>LearnWordServlet</servlet-name>
  	<url-pattern>/LearnWordServlet</url-pattern>
  </servlet-mapping>


	<servlet>
		<servlet-name>HomePage</servlet-name>
		<display-name>HomePage</display-name>
		<description>Home</description>
		<servlet-class>com.toeic.servlet.LearnServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>HomePage</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>


  
</web-app>
